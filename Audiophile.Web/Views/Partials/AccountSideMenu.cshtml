@model int
@{
    var lang = Constants.GetLang(Context.Session.GetString("lang"));
}
<div class="side-bar width-100-15">
    <div class="kategoriler-div w-clearfix">
        <div class="kategoriler">@Localization.Get("Hesap İşlemleri","Account Settings", lang)</div>
        
        <a href="@Constants.GetURL((int)Enums.Routing.UyelikBilgilerim, lang)" class="link-block w-inline-block w-clearfix sidemenu-link">
            <div>@Localization.Get("Üyelik Bilgilerim","Personal Information", lang)</div>
        </a>
        
        <a href="@Constants.GetURL((int)Enums.Routing.AdresBilgierim, lang)" class="link-block w-inline-block w-clearfix sidemenu-link">
            <div>@Localization.Get("Adres Bilgilerim","Postage Address", lang)</div>
        </a>
        <a href="@Constants.GetURL((int)Enums.Routing.SifreDegistir, lang)" class="link-block w-inline-block sidemenu-link">
            <div>@Localization.Get("Şifre Değiştir","Change Password", lang)</div>
        </a>
        <a href="@Constants.GetURL((int)Enums.Routing.CariHesabim, lang)" class="link-block w-inline-block sidemenu-link">
            <div>@Localization.Get("Cari Hesabım","Transactions", lang)</div>
        </a>
        <a href="@Constants.GetURL((int)Enums.Routing.Ilanlarim, lang)" class="link-block w-inline-block sidemenu-link">
            <div>@Localization.Get("İlanlarım","My Advertisements", lang)</div>
        </a>
        <a href="@Constants.GetURL((int)Enums.Routing.YaptigimYorumlar, lang)" class="link-block w-inline-block sidemenu-link">
