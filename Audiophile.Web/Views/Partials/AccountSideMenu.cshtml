            <div>@Localization.Get("Beğendiğim İlanlar","My Likes", lang)</div>
        </a>
        <a href="@Constants.GetURL((int)Enums.Routing.Bannerlarim, lang)" class="link-block w-inline-block sidemenu-link">
            <div>@Localization.Get("Bannerlarım","My Banners", lang)</div>
        </a>
        <a href="@Constants.GetURL((int)Enums.Routing.HaberVeFirmalarim, lang)" class="link-block w-inline-block sidemenu-link">
            <div>@Localization.Get("Haber ve Firmalarım","My News and Firms", lang)</div>
        </a>
        <a href="@Constants.GetURL((int)Enums.Routing.SistemVeMakalelerim, lang)" class="link-block w-inline-block sidemenu-link">
            <div>@Localization.Get("Sistem ve Makalelerim","My Systems and Arcticles", lang)</div>
        </a>
    </div>
</div>
 
<script>
    window.onload = function() {
        $($('.sidemenu-link')[@Model]).addClass('w--current');
    } 
</script> 

